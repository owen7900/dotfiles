// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu && vim_mode == normal",
    "bindings": {
      "space b": "editor::ToggleGitBlame",
      "space f f": "file_finder::Toggle",
      "space f s": "project_symbols::Toggle",
      "space f w": "workspace::NewSearch",
      "space f b": "tab_switcher::Toggle",
      "space s": "workspace::ToggleRightDock",
      "shift-k": "editor::Hover",
      "space l f": "editor::Format",
      "space d": "diagnostics::Deploy",
      "space o": "tab_switcher::Toggle",
      "space e": "workspace::ToggleLeftDock",
      // "space e": "project_panel::ToggleFocus",
      "space /": "editor::ToggleComments",
      "n": "search::SelectNextMatch",
      "shift-n": "search::SelectPrevMatch",
      "space c a": "editor::ToggleCodeActions",
      "space c h": "editor::SwitchSourceHeader",
      "space l r": "editor::Rename",
      "space t": "workspace::ToggleBottomDock",
      "g r": "editor::FindAllReferences",
      "space q": "pane::CloseAllItems",
      "space p o": "projects::OpenRecent"
    }
  },
  {
    "context": "Terminal && VimControl && !VimWaiting && vim_mode == normal",
    "bindings": {
      "space t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel && vim_mode == normal",
    "bindings": {
      "a": "project_panel::NewFile"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp",
      "space /": "editor::ToggleComments"
    }
  }
]
